{
  // Schema reference retained for validation and editor support.
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    // Keep Renovate updates aligned with our pre-commit hooks.
    ":enablePreCommit"
  ],
  // Allow Renovate to merge PRs automatically when policy and checks allow it.
  "automerge": true,
  "automergeType": "pr",
  "packageRules": [
    {
      // Ensure GitHub Actions are pinned to digest SHAs for supply-chain integrity.
      "matchManagers": ["github-actions"],
      "pinDigests": true
    }
  ]
}
