{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "properties": {
    "image": {
      "properties": {
        "tag": {
          "type": "string"
        },
        "repository": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string",
          "enum": [
            "IfNotPresent",
            "Always",
            "Never"
          ]
        }
      },
      "required": [
        "repository",
        "tag"
      ]
    },
    "awsEnvSecrets": {
      "properties": {
        "externalSecret": {
          "properties": {
            "secretStoreRef": {
              "properties": {
                "kind": {
                  "type": "string",
                  "enum": [
                    "SecretStore",
                    "ClusterSecretStore"
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "title": "Values",
  "type": "object"
}
