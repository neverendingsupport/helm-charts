{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "properties": {
    "image": {
      "properties": {
        "tag": {
          "type": "string"
        },
        "repository": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string",
          "enum": [
            "IfNotPresent",
            "Always",
            "Never"
          ]
        }
      },
      "required": [
        "repository",
        "tag"
      ]
    },
    "awsEnvSecrets": {
      "properties": {
        "externalSecret": {
          "properties": {
            "secretStoreRef": {
              "properties": {
                "kind": {
                  "type": "string",
                  "enum": [
                    "SecretStore",
                    "ClusterSecretStore"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "serviceMonitor": {
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "path": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "interval": {
          "anyOf": [
            {
              "type": "integer",
              "minimum": 1
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "spread_azs": {
      "type": "boolean"
    },
    "spread_spot": {
      "type": "boolean"
    },
    "revisionHistoryLimit": {
      "type": "integer",
      "minimum": 0
    }
  },
  "title": "Values",
  "type": "object"
}
